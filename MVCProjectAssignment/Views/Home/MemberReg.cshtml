
@{
    ViewBag.Title = "MemberReg";
}

<h1>Member Registration</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">FirstName</div>
    <div><input type="text" name="firstname" class="form-control" /></div>
    <br />
    <div class="form-group">LastName</div>
    <div><input type="text" name="lastname" class="form-control" /></div>
    <br />
    <div class="form-group">Age</div>
    <div><input type="text" name="age" class="form-control" /> </div>
    <br />

    <div><button type="submit" class="btn-success">Submit</button></div>
    <br />

    <div> <h1 style="color:green;font-size:xx-large">@ViewBag.Successful</h1></div>
    <br />
    <div><h1 style="font-weight:bold;font-size:large">@ViewBag.MemberId</h1> </div>
    <div> <h1 style="color:red;font-size:xx-large">@ViewBag.ErrorMessage</h1></div>

</form>
